       "/profile-info-update": {
            "post": {
                "tags": ["Profile"],
                "summary": "Update additional personal and document information",
                "operationId": "updateAdditionalInfo",
                "security": [
                { "bearerAuth": [] }
                ],
                "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                    "schema": {
                        "type": "object",
                        "required": [
                        "requires_work_permit",
                        "uses_car",
                        "uses_motorcycle",
                        "uses_bicycle",
                        "has_motoring_convictions",
                        "is_uk_licence",
                        "licence_country_of_issue",
                        "is_agreed_privacy_policy",
                        "docs"
                        ],
                        "properties": {
                        "requires_work_permit": {
                            "type": "boolean"
                        },
                        "uses_car": {
                            "type": "boolean"
                        },
                        "uses_motorcycle": {
                            "type": "boolean"
                        },
                        "uses_bicycle": {
                            "type": "boolean"
                        },
                        "has_motoring_convictions": {
                            "type": "boolean",
                            "description": "Required if uses_car or uses_motorcycle is true"
                        },
                        "is_uk_licence": {
                            "type": "boolean"
                        },
                        "licence_country_of_issue": {
                            "type": "string",
                            "description": "Required if is_uk_licence is true"
                        },
                        "is_agreed_privacy_policy": {
                            "type": "boolean"
                        },
                        "docs": {
                            "type": "array",
                            "items": {
                            "type": "object",
                            "required": ["doc_type"],
                            "properties": {
                                "doc_type": {
                                "type": "string",
                                "enum": ["visa", "passport", "ni", "license", "sign"]
                                },
                                "doc_number": {
                                "type": "string",
                                "nullable": true
                                },
                                "doc_expiry": {
                                "type": "string",
                                "format": "date",
                                "nullable": true
                                },
                                "doc_url": {
                                "type": "string",
                                "format": "binary",
                                "description": "File (jpeg, png, jpg, gif, svg, pdf). Max 2MB"
                                }
                            }
                            }
                        }
                        }
                    }
                    }
                }
                },
                "responses": {
                "200": {
                    "description": "Profile Info Updated Successful",
                    "content": {
                    "application/json": {
                        "schema": {
                        "type": "object",
                        "properties": {
                            "code": { "type": "integer", "example": 200 },
                            "success": { "type": "boolean", "example": true },
                            "message": { "type": "string", "example": "Profile Info Updated Successful" }
                        }
                        }
                    }
                    }
                },
                "401": {
                    "description": "User not approved by admin",
                    "content": {
                    "application/json": {
                        "schema": {
                        "type": "object",
                        "properties": {
                            "code": { "type": "integer", "example": 401 },
                            "success": { "type": "boolean", "example": false },
                            "message": { "type": "string", "example": "User not approved by admin" }
                        }
                        }
                    }
                    }
                }
                }
            }
        }

