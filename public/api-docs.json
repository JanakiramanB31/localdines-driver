        "/signup": {
            "post": {
                "tags": [
                "Authentication"
                ],
                "summary": "Register a new delivery user",
                "operationId": "signupUser",
                "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                    "schema": {
                        "type": "object",
                        "required": [
                        "f_name",
                        "s_name",
                        "email",
                        "phone_number",
                        "password",
                        "dob",
                        "nationality",
                        "is_non_british",
                        "street_name",
                        "city",
                        "post_code",
                        "home_phone"
                        ],
                        "properties": {
                        "f_name": {
                            "type": "string",
                            "minLength": 3
                        },
                        "m_name": {
                            "type": "string"
                        },
                        "s_name": {
                            "type": "string",
                            "minLength": 3
                        },
                        "email": {
                            "type": "string",
                            "format": "email"
                        },
                        "phone_number": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string",
                            "minLength": 8
                        },
                        "dob": {
                            "type": "string",
                            "format": "date"
                        },
                        "nationality": {
                            "type": "string"
                        },
                        "is_non_british": {
                            "type": "boolean"
                        },
                        "home_no": {
                            "type": "string"
                        },
                        "home_name": {
                            "type": "string"
                        },
                        "street_name": {
                            "type": "string"
                        },
                        "city": {
                            "type": "string"
                        },
                        "county": {
                            "type": "string"
                        },
                        "post_code": {
                            "type": "string"
                        },
                        "home_phone": {
                            "type": "string"
                        }
                        }
                    }
                    }
                }
                },
                "responses": {
                "201": {
                    "description": "User Created Successfully",
                    "content": {
                    "application/json": {
                        "schema": {
                        "type": "object",
                        "properties": {
                            "code": {
                            "type": "integer",
                            "example": 201
                            },
                            "success": {
                            "type": "boolean",
                            "example": true
                            },
                            "message": {
                            "type": "string",
                            "example": "User Created Successfully"
                            }
                        }
                        }
                    }
                    }
                }
                }
            }
        },
